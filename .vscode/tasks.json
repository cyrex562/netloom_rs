{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cargo",
            "subcommand": "build",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build"
        },
        { 
            "type":"shell",
            "command": "copy default_config.yml ./target/debug",
            "windows": {
                "command": "copy default_config.yml .\\target\\debug"
            },
            "group": "build",
            "label": "copy default config file"
        }
    ]
}